{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__memory__.*",
        "hooks": [
          {
            "type": "command", 
            "command": "bash ./.claude/hooks/update-context-from-memory.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/restore-session-after-compaction.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/claude-finished-notification.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/preserve-session-before-compaction.sh"
          }
        ]
      }
    ]
  }
}