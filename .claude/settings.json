{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__memory__.*",
        "hooks": [
          {
            "type": "command", 
            "command": "bash ./.claude/hooks/update-context-from-memory.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd /home/martinkavik/repos/NovyWave && bash ./.claude/hooks/claude-finished-notification.sh"
          }
        ]
      }
    ]
  }
}