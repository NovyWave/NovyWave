{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NovyWave",
  "version": "0.1.0",
  "identifier": "com.novywave",
  "build": {
    "frontendDist": "../frontend_dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NovyWave",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ipc: tauri: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/NovyWave/NovyWave/releases/latest/download/latest.json"
      ],
      "pubkey": "REPLACE_WITH_PUBLIC_KEY"
    }
  }
}
